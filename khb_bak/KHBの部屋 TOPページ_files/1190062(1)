function __ntct__loadIframe(adf,target_obj) {
    var fid = (adf==2)?108:103;

    var div = document.createElement("div");
    div.setAttribute("style", "backgroundColor:#000000; border:1px solid #CBCBCB;width:300px;height:250px;");

    var f = document.createElement("iframe");
    f.setAttribute("style", "margin:0;padding:0;");
    f.setAttribute("width", "300");
    f.setAttribute("height", "250");
    f.setAttribute("frameborder", "0");
    f.setAttribute("scrolling", "no");
	f.setAttribute("id", "NINCtCMSection");

    var nosrc = false;
    if (document.uniqueID && typeof window.matchMedia == "undefined") {
        f.setAttribute("src", "http://img.shinobi.jp/axad/asumi-"+fid+".html");
    }else{
        nosrc = true;
    }

    div.appendChild(f);
    target_obj.appendChild(div);

    if (nosrc === true) {
        var d = f.contentWindow.document;
        d.open();
        d.write('<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"><html lang="utf-8"><head><meta http-equiv="content-type" content="text/html; charset=utf-8"><title>PR</title><style type="text/css">body{margin: 0px;padding: 0px;background: #FFFFFF;color: #333333;}</style></head><body>');
        d.write('<script type="text/javascript" charset="utf-8" src="/'+'/asumi.shinobi.jp/encount"></script>');
        d.write('<script type="text/javascript" charset="utf-8" src="/'+'/asumi.shinobi.jp/fire?f='+fid+'"></scr'+'ipt>');
        if (fid==108){
            d.write('<script type="text/javascript" charset="utf-8" src="/'+'/asumi.shinobi.jp/fire?f=234"></scr'+'ipt>');
        }else{
            d.write('<script type="text/javascript" charset="utf-8" src="/'+'/asumi.shinobi.jp/fire?f=233"></scr'+'ipt>');

        }
        d.write("</body>");
        d.write("</html>");
        d.close();
    }
}


function NINCtMouseOverListener(e) {
	NINCtMouseLocation = document.all ? {x:e.clientX + (document.body.scrollLeft || document.documentElement.scrollLeft), y:e.clientY + (document.body.scrollTop || document.documentElement.scrollTop)} : {x:e.pageX, y:e.pageY}; 
	
	var NINCtDrawSection = document.getElementById("NINCtDrawSection");
	if (!document.getElementById("NINCtCMSection")) {
		var referrer = document.referrer;
		var enc_str = "% !\"#$&'()*+,/:;<=>?@[]^`{|}~";
		for(var index = 0; index < enc_str.length ; index++){
			var char_n = parseInt(enc_str.charCodeAt(index));
			var rep_word = enc_str.substr(index, 1);
			referrer = referrer.replace(new RegExp("\\" + rep_word, "g"), "%" + char_n.toString(16));
		}
		if (NINCtYuryo != 1 && NINCtTsumugiStatus != 0) {
            __ntct__loadIframe(NINCtTsumugiStatus, document.getElementById("NINCtCMArea"));
		}
	}
	
	document.getElementById("NINCtMouserOverScript").src = NINCtURL + "/js/drawMouseOver.js";
	
}
var NINCtBaseHTML = ''
+ '<script id="NINCtMouserOverScript" type="text/javascript" charset="utf-8"></script>'
+ '<div id="NINCtCounterSection" style="width:300px; display:inline; position:relative;">'
