(function(d){
    var head = d.getElementsByTagName('head')[0];
    var script = d.createElement('script');
    script.defer = 'defer';
    script.async = 'async';
    script.src  = '//st.shinobi.jp/img/services/admaxdsp/static/javascripts/trac.js';
    head.insertBefore(script, head.firstChild);
})(document);

