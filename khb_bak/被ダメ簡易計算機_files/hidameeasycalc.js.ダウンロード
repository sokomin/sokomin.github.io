//
//　function hidamekeisan()
//  機能：被ダメ簡易計算機処理
//
    function hidamekeisan()
  {
  	// 設定値の取得
  	hontaiLv_kougeki = eval(document.hidameeasycalc.hontaiLv_kougeki.value);
  	kougeki = eval(document.hidameeasycalc.kougeki.value);
  	ningentsuika_soubi = eval(document.hidameeasycalc.ningentsuika_soubi.value);
  	ningentsuika_pet = eval(document.hidameeasycalc.ningentsuika_pet.value);
  	crest_ningenkougeki = eval(document.hidameeasycalc.crest_ningenkougeki.value);
  	hontaiLv_bougyo = eval(document.hidameeasycalc.hontaiLv_bougyo.value);
  	bougyo_kijun = eval(document.hidameeasycalc.bougyo_kijun.value);
  	zoubun = eval(document.hidameeasycalc.zoubun.value);
  	drape = eval(document.hidameeasycalc.drape.value);
  	ningenbougyo = eval(document.hidameeasycalc.ningenbougyo.value);
  	crest_ningenbougyo = eval(document.hidameeasycalc.crest_ningenbougyo.value);
  	
    // Lv補正値の計算
    if ( hontaiLv_kougeki >= hontaiLv_bougyo ){
      Lvsa = hontaiLv_kougeki - hontaiLv_bougyo;
      if ( Lvsa > 200 ) Lvsa = 200;
      Lvhosei = 1+ 0.005*(Lvsa);
    } else {
      Lvsa = hontaiLv_bougyo - hontaiLv_kougeki;
      if ( Lvsa > 200 ) Lvsa = 200;
      Lvhosei = 1+ 0.005*(Lvsa);
    }

  	// 計算と結果の出力
  	for ( i = 1; i<=10; i++ ){
  		// 被ダメ計算と出力
  		ningentsuika = ningentsuika_soubi + ningentsuika_pet + crest_ningenkougeki + drape;
  		bougyo = bougyo_kijun + zoubun * (i-1);
  		bougyo_ningen = Math.floor(bougyo * ( 1 + (ningenbougyo + crest_ningenbougyo) / 100 ));
  		kougeki_ningen = kougeki * ( 1 + ningentsuika / 100 );
  		kougeki_ningen_bougyocrest = kougeki * ( 1 + ( ningentsuika - crest_ningenbougyo ) / 100 );
  		hidame_ningenhosei = kougeki_ningen_bougyocrest / ( bougyo_ningen / kougeki_ningen + 1 ) * Lvhosei;
//  		hidame = kougeki / ( 1 + bougyo_ningen / kougeki );
//  		hidame_ningenhosei = hidame * ( 100 + ningentsuika - crest_ningenbougyo ) / 100 * Lvhosei;
  		hidame_root = Math.floor(Math.sqrt(hidame_ningenhosei)*10)/10 ;
  		reshidameName = "res_hidame_" + i;
  		document.hidameeasycalc[reshidameName].value = hidame_root ;
  		
  		// 防御力の出力
  		resbougyoName = "res_bougyo_" + i;
  		document.hidameeasycalc[resbougyoName].value = bougyo ;
  		resbougyoningenName = "res_bougyo2_" + i;
  		document.hidameeasycalc[resbougyoningenName].value = bougyo_ningen ;
    }
  }


//
//　Init()
//　機能：ページロード時の初期化処理
//　メンバ：なし
//　戻り値：なし。
//
	function Init()
  {
  }
